<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quizbiblico.com.claudinei.quizbiblico.Login"
    android:weightSum="1"
    android:background="@drawable/degrade_linear_blue"
    app:layout_collapseParallaxMultiplier="0.0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txtPergunta"
            android:textColor="@color/myWhite"
            android:padding="8dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/default_size_question"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="330dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnA"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:textSize="@dimen/default_size_alternative"
                android:layout_marginTop="1dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/myLightGray"
                android:layout_height="82dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnB"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:textSize="@dimen/default_size_alternative"
                android:layout_marginTop="1dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/myLightGray"
                android:layout_height="82dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnC"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:textSize="@dimen/default_size_alternative"
                android:layout_marginTop="1dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/myLightGray"
                android:layout_height="82dp" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnD"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:textSize="@dimen/default_size_alternative"
                android:layout_marginTop="1dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/myLightGray"
                android:layout_height="82dp" />

        </LinearLayout>

        <Button
            android:text="Ajuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAjuda"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
