<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quizbiblico.com.claudinei.quizbiblico.menuPrincipal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin">

        <Button
            android:text="Jogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnJogar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNome"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <!-- Dificuldade -->
        <TextView
            android:text="@string/dificuldades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNome"
            android:layout_marginTop="15dp"
            android:id="@+id/txtDificuldade"
            android:textSize="18sp"
            android:textColor="@color/myColor3"
            android:textStyle="normal|bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@+id/txtDificuldade"
            android:id="@+id/scrollDificuldade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="130dp">

            <RadioGroup
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="@string/todos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioDificuldade_todas"
                    android:checked="true"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/dificuldades_facil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioDificuldade_facil"
                    android:checked="false"
                    android:duplicateParentState="false"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/dificuldades_medio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioDificuldade_media"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/dificuldades_dificil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioDificuldade_dificil"
                    android:textColor="@color/myDarkGray" />
            </RadioGroup>
        </ScrollView>

        <!-- Testamentos -->
        <TextView
            android:text="@string/testamentos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTestamentos"
            android:textSize="18sp"
            android:textColor="@color/myColor3"
            android:textStyle="normal|bold"
            android:layout_below="@id/scrollDificuldade"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollTestamentos"
            android:layout_height="100dp"
            android:layout_below="@id/txtTestamentos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioGroup
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:text="@string/todos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioTestamentos_todos"
                    android:checked="true"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/testamentos_antigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioTestamentos_antigo"
                    android:checked="false"
                    android:duplicateParentState="false"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/testamentos_novo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioTestamentos_novo"
                    android:textColor="@color/myDarkGray" />
            </RadioGroup>
        </ScrollView>

        <!-- Seções -->
        <TextView
            android:text="@string/secoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSecoes"
            android:textSize="18sp"
            android:textColor="@color/myColor3"
            android:textStyle="normal|bold"
            android:layout_below="@id/scrollTestamentos"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scrollSecoes"
            android:layout_height="100dp"
            android:layout_below="@id/txtSecoes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RadioGroup
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="@string/todos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_todos"
                    android:checked="true"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_pentateuco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_pentateuco"
                    android:checked="false"
                    android:duplicateParentState="false"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_historia1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_historia"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_poesia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_poesia"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_profetas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_profetas1"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_profetas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_profetas2"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_evangelhos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_evangelhos"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_historia2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_historia2"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_cartas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_cartas"
                    android:textColor="@color/myDarkGray" />
                <RadioButton
                    android:text="@string/secoes_profecia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioSecoes_profecia"
                    android:textColor="@color/myDarkGray" />

            </RadioGroup>
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>
