<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_Help">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:fadeScrollbars="false"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_pontuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pontuacao"
                android:textColor="@color/myColor3"
                android:textSize="22sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/help_pontuacao_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:text="@string/pontuacao"
                android:textColor="@color/myColor1"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/help_powerups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/como_funcionam_os_powerups"
                android:textColor="@color/myColor3"
                android:textSize="22sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/help_powerups_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingLeft="8dp"
                android:text="@string/como_funcionam_os_powerups"
                android:textColor="@color/myColor1"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
