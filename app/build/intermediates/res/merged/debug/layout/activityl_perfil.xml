<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor5"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_Perfil">

    <ImageView
        android:id="@+id/perfil_imgPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_perfil" />

    <ScrollView
        android:id="@+id/perfil_scrollView"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_below="@id/perfil_imgPerfil">

        <LinearLayout
            android:id="@+id/perfil_linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="104dp">

            <TextView
                android:id="@+id/perfil_lblEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_email"
                android:textColor="@color/myLightGray" />

            <LinearLayout
                android:id="@+id/perfil_linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/perfil_txtEmail"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/perfil_btnEditEmail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_edit" />

            </LinearLayout>

            <TextView
                android:id="@+id/perfil_lblNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_name"
                android:textColor="@color/myLightGray" />

            <EditText
                android:id="@+id/perfil_txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/perfil_lblSenha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/prompt_password"
                android:textColor="@color/myLightGray" />


            <LinearLayout
                android:id="@+id/perfil_linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/perfil_txtSenha"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:enabled="false"
                    android:inputType="textPassword"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:id="@+id/perfil_btnEditSenha"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/img_edit" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_preferencias" />

            <Switch
                android:id="@+id/perfil_swSons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/perfil_sons"
                android:textColor="@color/myLightGray"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/perfil_swVibracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/perfil_vibracao"
                android:textColor="@color/myLightGray"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_powerups" />

            <TextView
                android:id="@+id/perfil_lblPowerUP_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perfil_bonus_tempo"
                android:textColor="@color/myLightGray" />

            <EditText
                android:id="@+id/perfil_powerUP_tempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/perfil_lblPowerUP_alternativa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perfil_bonus_elimina"
                android:textColor="@color/myLightGray" />

            <EditText
                android:id="@+id/perfil_powerUP_alternativa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/perfil_lblPowerUP_referencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perfil_bonus_referencia"
                android:textColor="@color/myLightGray" />

            <EditText
                android:id="@+id/perfil_powerUP_referencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_pontuacao" />

            <TextView
                android:id="@+id/perfil_lblPontuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pontuacao"
                android:textColor="@color/myLightGray" />

            <EditText
                android:id="@+id/perfil_pontuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/perfil_lblPontuacao_questoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/perfil_pontuacao_questoes"
                android:textColor="@color/myLightGray" />

            <EditText
                android:id="@+id/perfil_pontuacao_acertos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_resetarpontuacao" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/perfil_linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/perfil_scrollView"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/perfil_btnCancelar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_cancelar" />

        <ImageView
            android:id="@+id/perfil_btnSalvar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_salvar" />

    </LinearLayout>

</RelativeLayout>
