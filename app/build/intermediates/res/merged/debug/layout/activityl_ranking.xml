<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_Ranking"
    android:background="@drawable/degrade_linear_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ranking_layout_carregando"
        android:visibility="invisible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/ranking_progresso"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/ranking_carregando"
            android:text="@string/carregando"
            android:textColor="@color/myWhite"
            android:textSize="@dimen/font_size_title_large"
            android:textStyle="bold"
            android:layout_below="@id/ranking_progresso" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_ranking"
        android:contentDescription="Imagem Ranking"
        android:layout_marginBottom="381dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <!-- <ScrollView
        android:id="@+id/layout_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="75dp"
        android:visibility="visible"> -->

        <ListView
            android:id="@+id/ranking_lista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium">

        </ListView>

    <!-- </ScrollView> -->

</RelativeLayout>