<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor5"
    android:id="@+id/activity_help"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_Help">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_medium"
        android:fadeScrollbars="false"
        android:layout_alignParentEnd="true"
        android:id="@+id/layout_help">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/help_pontuacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pontuacao"
                android:textColor="@color/myLightGray"
                android:textSize="@dimen/font_size_title_medium"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/help_pontuacao_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:paddingStart="@dimen/margin_medium"
                android:text="@string/pontuacao"
                android:textColor="@color/myColor1"
                android:textSize="@dimen/font_size_text_medium"
                android:textStyle="normal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/help_powerups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/como_funcionam_os_powerups"
                android:textColor="@color/myLightGray"
                android:textSize="@dimen/font_size_title_medium"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/help_powerups_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:paddingStart="@dimen/margin_medium"
                android:text="@string/como_funcionam_os_powerups"
                android:textColor="@color/myColor1"
                android:textSize="@dimen/font_size_text_medium"
                android:textStyle="normal"
                android:visibility="invisible" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
