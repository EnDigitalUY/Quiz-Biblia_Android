<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_Login"
    android:background="@drawable/degrade_linear_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/jogo_layout_carregando"
        android:visibility="visible">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:id="@+id/jogo_progresso"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/jogo_carregando"
            android:text="@string/carregando"
            android:textColor="@color/myWhite"
            android:textSize="@dimen/font_size_title_large"
            android:textStyle="bold"
            android:layout_below="@id/jogo_progresso" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_large"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/layout_jogo">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2"
            android:layout_height="@dimen/game_alternatives_sum_size">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnA"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:textSize="@dimen/font_size_text_large"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/game_alternative_size"
                android:text="Alternativa A" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnB"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:textSize="@dimen/font_size_text_large"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/game_alternative_size"
                android:text="Alternativa B" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnC"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:textSize="@dimen/font_size_text_large"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/game_alternative_size"
                android:text="Alternativa C" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnD"
                android:layout_marginBottom="@dimen/margin_extra_small"
                android:layout_marginTop="@dimen/margin_extra_small"
                android:textSize="@dimen/font_size_text_large"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/game_alternative_size"
                android:text="Alternativa D" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPergunta"
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_question_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/quadro_questao"
            android:fontFamily="sans-serif"
            android:padding="@dimen/margin_small"
            android:text="Pergunta"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/myColor5"
            android:textSize="@dimen/font_size_title_small"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSecao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtDificuldade"
            android:layout_alignBottom="@+id/txtDificuldade"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="Seção:"
            android:textColor="@color/myDarkGray"
            android:textSize="@dimen/font_size_text_medium" />

        <TextView
            android:id="@+id/txtDificuldade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtPergunta"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_extra_small"
            android:layout_marginStart="@dimen/margin_small"
            android:text="Dificuldade:"
            android:textColor="@color/myDarkGray"
            android:textSize="@dimen/font_size_text_medium" />

        <TextView
            android:id="@+id/txtTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/font_size_title_extra_small"
            android:textStyle="normal|bold" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
