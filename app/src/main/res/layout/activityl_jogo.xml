<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_Login"
    android:weightSum="1"
    android:background="@drawable/degrade_linear_blue"
    app:layout_collapseParallaxMultiplier="0.0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2"
            android:layout_height="307dp">

            <!-- <ImageButton
                app:srcCompat="@drawable/quadro_alternativa"
                android:cropToPadding="true" /> -->

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnA"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/default_size_alternative"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/alternativa_tamanho"
                android:text="Alternativa A" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnB"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/default_size_alternative"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/alternativa_tamanho"
                android:text="Alternativa B" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnC"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/default_size_alternative"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/alternativa_tamanho"
                android:text="Alternativa C" />

            <Button
                android:layout_width="match_parent"
                android:id="@+id/btnD"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="@dimen/default_size_alternative"
                android:textAllCaps="false"
                android:background="@drawable/quadro_alternativa"
                android:cropToPadding="true"
                android:layout_height="@dimen/alternativa_tamanho"
                android:text="Alternativa D" />

        </LinearLayout>

        <TextView
            android:text="Seção:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSecao"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filtros_txtDificuldade"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Dificuldade:"/>

        <TextView
            android:id="@+id/txtTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtPergunta"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="9dp"
            android:background="@drawable/quadro_questao"
            android:fontFamily="sans-serif"
            android:padding="8dp"
            android:text="Pergunta"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/myColor5"
            android:textSize="@dimen/default_size_question"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
