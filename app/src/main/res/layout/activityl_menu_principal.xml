<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degrade_linear_blue"
    tools:context="quizbiblico.com.claudinei.quizbiblico.activityc_MenuPrincipal">

    <RelativeLayout
        android:id="@+id/menuprincipal_layout_carregando"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/menuprincipal_progresso"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small" />

        <TextView
            android:id="@+id/menuprincipal_carregando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuprincipal_progresso"
            android:layout_centerHorizontal="true"
            android:text="@string/carregando"
            android:textColor="@color/myWhite"
            android:textSize="@dimen/font_size_title_large"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_menuprincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/menuprincipal_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnJogar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_jogar" />

            <ImageView
                android:id="@+id/btnPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_perfil" />

            <ImageView
                android:id="@+id/btnHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_manual" />

            <ImageView
                android:id="@+id/btnRanking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_ranking" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
